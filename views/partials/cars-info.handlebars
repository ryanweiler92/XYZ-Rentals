<div class="row row-cols-1 row-cols-lg-5 g-4 mb-3">
	<!-- card with car info -->
	{{#each this}}
	<div class="col">
		<div class="car-page-card card">
			<!-- car image -->
			<img src="{{image}}" class="card-img-top" alt="{{make}}_{{model}}">
			<div class="card-body">
				<!-- car year, make, model -->
				<h5 class="card-title">{{year}} {{make}} {{model}}</h5>
				<h6 class="">Style: {{type}}</h6>
				<div class="d-flex justify-content-center">
					<button type="submit" class="btn btn-sm btn-outline-dark me-2" value="{{id}}">See Reviews</button>
					<button type="submit" class="btn btn-sm btn-outline-dark me-2" id="post-btn">Submit Reviews</button>
				</div>
			</div>
		</div> 
	</div>
	{{/each}}
</div>