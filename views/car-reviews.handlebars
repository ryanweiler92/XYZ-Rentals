	<section class="d-flex justify-content-center my-4">
		<h2>Reviews for the {{car.year}} {{car.make}} {{car.model}}1992 Ford Aerostar</h2>
	</section>
	
	<div class="container d-flex justify-content-center ">
		<div class="row row-cols-1 g-4 col-lg-8 mb-3">
			<div class="col">
				<div class="card">
					<!-- user name -->
					<h3 class="card-header">{{user.username}}</h3>
					<div class="card-body">
						<!-- stars for review -->
						<p>How was your overall expierence with XYZ Rentals -stars</p>
						<!-- user comment -->
						<p>"{{review.review}}"</p>
						<!-- dents boolean -->
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" value="" id="flexCheckCheckedDisabled" checked disabled>
							<label class="form-check-label" for="flexCheckCheckedDisabled">Dents</label>
						</div>
						<!-- scratches boolean -->
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" value="" id="flexCheckDisabled" disabled>
							<label class="form-check-label" for="flexCheckDisabled">Scratches</label>
						</div>
						<!-- odor boolean -->
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" value="" id="flexCheckDisabled" disabled>
							<label class="form-check-label" for="flexCheckDisabled">Odor</label>
						</div>
						<!-- stains boolean -->
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" value="" id="flexCheckCheckedDisabled" checked disabled>
							<label class="form-check-label" for="flexCheckCheckedDisabled">Stains</label>
						</div>
					</div>
				</div>
			</div>			
		</div>
	</div>